            <?php endif; ?>
        </form>

        <?php if ($this->checkoutUrl): ?>
            <div class="regiondo-cart__checkout">
                <a href="<?= $this->checkoutUrl ?>" title="<?= specialchars($GLOBALS['TL_LANG']['MSC']['regiondo.cart.checkout']) ?>" class="regiondo-cart__checkout-link"><?= $GLOBALS['TL_LANG']['MSC']['regiondo.cart.checkout'] ?></a>
            </div>
        <?php endif; ?>
    <?php else: ?>
        <p class="regiondo-cart__empty"><?= $GLOBALS['TL_LANG']['MSC']['regiondo.cart.empty'] ?></p>
